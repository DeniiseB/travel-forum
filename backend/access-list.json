[
  {
    "path": "/rest/*",
    "roles": [
      { "role": "*", "methods": ["GET", "POST", "PUT"] },
      { "role": "admin", "methods": ["GET", "DELETE"] }
    ]
  },
    {
    "path": "/api/*",
    "roles": [
      { "role": "*", "methods": ["GET", "POST", "PATCH"] },
      { "role": "admin", "methods": ["GET", "DELETE"] }
    ]
  },
  {
    "path": "/rest/users*",
    "roles": [{ "role": "anonymous", "methods": ["POST"] }]
  },

  {
    "path": "/rest/login",
    "roles": [
      { "role": "anonymous", "methods": ["POST"] },
      { "role": "member", "methods": ["GET", "DELETE"] },
      { "role": "user", "methods": ["GET", "DELETE"] },
      { "role": "admin", "methods": ["GET", "DELETE"] },
      { "role": "groupAdmin", "methods": ["GET", "DELETE"] },
      { "role": "groupModerator", "methods": ["GET", "DELETE"] }
    ]
  }
]